{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "#handlers/*": ["./src/handlers/*"],
      "#alarms/*": ["./src/alarm-config/cloudwatch-alarms/*"],
      "#cloudwatch-alarm-utils/*": ["./src/alarm-config/utils/cloudwatch/*"],
      "#prometheus-alarm-utils/*": ["./src/alarm-config/utils/prometheus/*"],
      "#service-modules/*": ["./src/service-modules/*"],
      "#types/*": ["./src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
